<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gpNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="股票代号"
            android:padding="4dp"
            android:textColor="@android:color/holo_blue_dark"/>

        <TextView
            android:id="@+id/gpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="股票名字"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/gpXianjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="现价格"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gpUpdateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="更新时间"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/gpChengJiaoLiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="成交量"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/huangse"/>

        <TextView
            android:id="@+id/gpShengdie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>